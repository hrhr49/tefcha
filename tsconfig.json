    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "moduleResolution": "node",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
